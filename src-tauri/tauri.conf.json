{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "QuickClipboard",
  "version": "0.0.3",
  "identifier": "com.quickclipboard.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "快速剪贴板",
        "width": 360,
        "height": 580,
        "minWidth": 350,
        "minHeight": 500,
        "maxWidth": 500,
        "maxHeight": 800,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "center": true,
        "visible": false,
        "resizable": true,
        "focus": false,
        "maximizable": false,
        "dragDropEnabled": false,
        "shadow": false,
        "visibleOnAllWorkspaces": true
      },
      {
        "label": "settings",
        "title": "设置 - 快速剪贴板",
        "url": "settings.html",
        "width": 900,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "center": true,
        "visible": false,
        "resizable": false,
        "focus": true,
        "maximizable": false,
        "dragDropEnabled": false
      },
      {
        "label": "screenshot",
        "title": "截屏选择",
        "url": "screenshot.html",
        "width": 1920,
        "height": 1080,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "center": false,
        "visible": false,
        "resizable": false,
        "focus": true,
        "maximizable": false,
        "minimizable": false,
        "fullscreen": true,
        "dragDropEnabled": false
      },
      {
        "label": "preview",
        "title": "快速预览",
        "url": "preview.html",
        "width": 400,
        "height": 180,
        "minWidth": 350,
        "minHeight": 180,
        "maxWidth": 400,
        "maxHeight": 180,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "center": false,
        "visible": false,
        "resizable": false,
        "focus": false,
        "maximizable": false,
        "minimizable": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default",
        "settings",
        "preview",
        "text-editor"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "MoSheng",
    "copyright": "Copyright © 2025 MoSheng. All rights reserved.",
    "icon": [
      "icons/icon32.png",
      "icons/icon64.png",
      "icons/icon128.png",
      "icons/icon256.png",
      "icons/icon1024.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../sounds": "sounds"
    },
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine",
        "languages": [
          "SimpChinese"
        ],
        "displayLanguageSelector": false
      },
      "wix": {
        "language": "zh-CN"
      }
    }
  }
}